{
    "name": "api-php/localise.biz",
    "description": "A community API client for localise.biz translation service",
    "license": "MIT",
    "keywords": ["loco", "localise.biz", "localise", "translation"],
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "hhvm": "^3.4",
        "php-http/httplug": "^1.0",
        "php-http/multipart-stream-builder": "^0.1",
        "php-http/client-common": "^1.1",
        "php-http/discovery": "^1.0",
        "webmozart/assert": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "php-http/message-factory": "^1.0",
        "php-http/guzzle6-adapter": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "APIPHP\\Localise\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "APIPHP\\Localise\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
